            <p>
                <label class="enter_radius">Search Radius:</label>
                <input type="number" min="0.1" name="rad" id="radius" /><br />
                <label class="enter_lat">Current Latitude:</label>
                <input type="number" name="lat" id="deg_lat" /><br />
                <label class="enter_lat">Current Longitude:</label>
                <input type="number" name="lat" id="deg_lon" /><br />
            </p>
        </fieldset>
        <br />
    </form>
