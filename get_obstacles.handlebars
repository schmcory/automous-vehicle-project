            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #000000;
        }

        .button_list {
            float: left;
        }

            .button_list a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                .button_list a:hover {
                    background-color: #333;
                    cursor: pointer;
                }

        .nav_pillar {
            left: 0px;
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 150px;
